@*
    Show log view widget for the dashboard.
*@
@using BlazorLogComponent
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Localization
@using Z21Dashboard.Shared.Dashboard.Components
@inject IStringLocalizer<ShowLogViewResources> Localizer

<DashboardWidget HeaderTitle="@Localizer["Title"]"
                 OnHeaderMouseDown="OnHeaderMouseDown"
                 OnBringToFront="OnBringToFront">
    <Content>
        <LogView MaxVisibleMessages="30"/>
    </Content>
</DashboardWidget>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnHeaderMouseDown { get; set; }

    [Parameter]
    public EventCallback OnBringToFront { get; set; }
}
