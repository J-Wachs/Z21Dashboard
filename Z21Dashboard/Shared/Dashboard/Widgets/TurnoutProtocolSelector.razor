@*
    Component to select and set the turnout protocol mode for a given address.
    If no address is provided, the user can input one.
*@
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Logging
@using Z21Dashboard.Application.Interfaces
@using Z21Dashboard.Application.Models
@using Z21Dashboard.Shared.Dashboard.Components
@inject IZ21Client Z21Client
@inject ILogger<TurnoutProtocolSelector> Logger
@implements IAsyncDisposable

<DashboardWindow HeaderTitle="Turnout Protocol Selector"
                 OnHeaderMouseDown="OnHeaderMouseDown"
                 OnBringToFront="OnBringToFront">
    <Content>
        <div class="input-group mb-3">
            <input type="number" maxlength="4" class="form-control" value="@_inputAddress" disabled="@(_effectiveAddress != 0)"
                   oninput="@((ChangeEventArgs e) => _inputAddress = ExtractValue(e))" placeholder="Enter turnout address (1-based)" />
        </div>

        @if (_effectiveAddress == 0)
        {
            <button class="btn btn-primary" onclick="@FetchTurnoutInfoAsync" disabled="@(_inputAddress == 0)">Get current protocol</button>
        }

        @if (_effectiveAddress != 0)
        {
            @if (_isLoading)
            {
                <div class="d-flex align-items-center">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <span class="ms-2">Fetching current protocol...</span>
                </div>
            }
            else if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">@_errorMessage</div>
                @* START: ADDED CANCEL BUTTON FOR ERROR STATE *@
                <button class="btn btn-secondary mt-2" onclick="@CancelSelection">Back</button>
                @* END: ADDED CANCEL BUTTON FOR ERROR STATE *@
            }
            else if (_currentMode.HasValue)
            {
                <div class="input-group mb-2">
                    <label for="protocol-select" class="input-group-text">Set New Protocol:</label>
                    <select id="protocol-select" class="form-select" @bind-value:event="oninput" @bind-value="_selectedMode">
                        @foreach (var mode in Enum.GetValues<TurnoutMode>())
                        {
                            <option value="@mode">@mode</option>
                        }
                    </select>
                </div>
                @* START: ADDED BUTTON GROUP AND CANCEL BUTTON *@
                <div class="btn-group w-100" role="group">
                    <button class="btn btn-success" onclick="@SetNewTurnoutModeAsync" disabled="@(_isSettingMode)">
                        @if (_isSettingMode)
                        {
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                            <span class="ms-1">Setting...</span>
                        }
                        else
                        {
                            <span>Set protocol</span>
                        }
                    </button>
                    <button class="btn btn-secondary" onclick="@CancelSelection">Cancel</button>
                </div>
                @* END: ADDED BUTTON GROUP AND CANCEL BUTTON *@
            }
        }
    </Content>
</DashboardWindow>

@code {
    [Parameter]
    public ushort TurnoutAddress { get; set; }

    /// <summary>
    /// Receives the mousedown event from the parent (Dashboard.razor)
    /// to initiate a drag operation.
    /// </summary>
    [Parameter]
    public EventCallback<MouseEventArgs> OnHeaderMouseDown { get; set; }

    [Parameter]
    public EventCallback OnBringToFront { get; set; }

    private ushort _inputAddress;
    private ushort _effectiveAddress;
    private TurnoutMode? _currentMode;
    private TurnoutMode _selectedMode;
    private bool _isLoading = false;
    private bool _isSettingMode = false;
    private string? _errorMessage;
    private TaskCompletionSource<TurnoutModeChangedEventArgs>? _turnoutModeTcs;

    protected override async Task OnParametersSetAsync()
    {
        if (TurnoutAddress > 0 && TurnoutAddress != _effectiveAddress)
        {
            _effectiveAddress = TurnoutAddress;
            _inputAddress = TurnoutAddress;
            await FetchTurnoutInfoAsync();
        }
        else if (TurnoutAddress == 0)
        {
            CancelSelection();
        }
    }

    // START: ADDED METHOD
    private void CancelSelection()
    {
        _effectiveAddress = 0;
        _inputAddress = 0;
        _currentMode = null;
        _errorMessage = null;
        StateHasChanged();
    }
    // END: ADDED METHOD

    private async Task FetchTurnoutInfoAsync()
    {
        if (_inputAddress == 0)
        {
            _errorMessage = "Please enter a valid turnout address.";
            return;
        }
        _effectiveAddress = _inputAddress;
        _isLoading = true;
        _errorMessage = null;
        _currentMode = null;
        await InvokeAsync(StateHasChanged);

        try
        {
            // Convert 1-based user address to 0-based protocol address
            var protocolAddress = (ushort)(_effectiveAddress - 1);
            Logger.LogInformation("Requesting turnout mode for address {UserAddress} (Protocol Address: {ProtocolAddress})", _effectiveAddress, protocolAddress);

            Z21Client.TurnoutModeReceived += OnTurnoutModeReceived;

            _turnoutModeTcs = new TaskCompletionSource<TurnoutModeChangedEventArgs>();
            await Z21Client.GetTurnoutModeAsync(protocolAddress);

            var completedTask = await Task.WhenAny(_turnoutModeTcs.Task, Task.Delay(3000));

            if (completedTask == _turnoutModeTcs.Task)
            {
                var result = await _turnoutModeTcs.Task;
                _currentMode = result.Mode;
                _selectedMode = result.Mode;
            }
            else
            {
                _errorMessage = "Did not receive a response from Z21 in time. Please check the connection.";
                Logger.LogWarning("Timeout waiting for TurnoutModeReceived for address {Address}", _effectiveAddress);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
            Logger.LogError(ex, "Exception while fetching turnout mode for {Address}", _effectiveAddress);
        }
        finally
        {
            Z21Client.TurnoutModeReceived -= OnTurnoutModeReceived;
            _isLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void OnTurnoutModeReceived(object? sender, TurnoutModeChangedEventArgs e)
    {
        // Compare with the 0-based protocol address
        if (e.Address == (_effectiveAddress - 1))
        {
            _turnoutModeTcs?.TrySetResult(e);
        }
    }

    private async Task SetNewTurnoutModeAsync()
    {
        if (_effectiveAddress == 0) return;

        _isSettingMode = true;
        await InvokeAsync(StateHasChanged);

        bool errorOccurred = false;
        try
        {
            // Convert 1-based user address to 0-based protocol address
            var protocolAddress = (ushort)(_effectiveAddress - 1);
            await Z21Client.SetTurnoutModeAsync(protocolAddress, _selectedMode);

            await Task.Delay(250);
            await FetchTurnoutInfoAsync();
        }
        catch (Exception ex)
        {
            errorOccurred = true;
            _errorMessage = $"Failed to set new mode: {ex.Message}";
            Logger.LogError(ex, "Failed to set turnout mode for {Address}", _effectiveAddress);
        }
        finally
        {
            if (errorOccurred is false)
            {
                // Reset the component after successfully setting the mode
                CancelSelection();
            }

            _isSettingMode = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private ushort ExtractValue(ChangeEventArgs e)
    {
        ushort returnValue = 0;

        switch (e.Value)
        {
            case string strValue when ushort.TryParse(strValue, out var parsedValue):
                returnValue = parsedValue;
                break;
            case ushort ushortValue:
                returnValue = ushortValue;
                break;
        }
        return returnValue;
    }

    public ValueTask DisposeAsync()
    {
        Z21Client.TurnoutModeReceived -= OnTurnoutModeReceived;
        _turnoutModeTcs?.TrySetCanceled();
        return ValueTask.CompletedTask;
    }
}